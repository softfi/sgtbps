<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/drawer_head"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center|start"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/drawer_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/drawer_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/drawer_logo"
            android:layout_alignTop="@id/drawer_logo"
            android:text="Dharmendra Kumar"
            android:layout_marginTop="10dp"
            android:textColor="#525252"
            android:textSize="@dimen/primaryText"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/drawer_userClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/drawer_userName"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/drawer_logo"
            android:text="11B"
            android:textColor="#525252"
            android:textSize="@dimen/secondaryText"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/drawer_studentDetailsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/drawer_userName"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/drawer_logo"
            android:text="@string/empty"
            android:textColor="#525252"
            android:textSize="@dimen/secondaryText"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/drawer_switchChildBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/drawer_studentDetailsTV"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/drawer_logo"
            android:layout_alignBottom="@id/drawer_logo"
            android:background="@color/transparent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/switchStudent"
                android:textColor="#525252"
                android:textSize="@dimen/secondaryText" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:src="@drawable/ic_nav_switch" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>

